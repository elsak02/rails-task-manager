<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <input type="checkbox" id="task-done"
    <% if task.completed == true %>
      checked
    <% end %>
    >
    <%=link_to "#{task.title}", task_path(task) %>
    <%= link_to "Delete",
            delete_task_path(task),
            method: :delete,
            data: { confirm: "Delete #{task.title}?" } %>
  </li>
  <% end %>
</ul>

<%=link_to "Add new task", new_task_path %>


