<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<div><%= link_to 'Edit task', edit_task_path %></div>


<% if @task.completed == true %>
  <%="This task is completed!" %>
<% else %>
  <%= "This task is not completed!" %>
<% end %>

<%= link_to "Delete",
            delete_task_path(@task),
            method: :delete,
            data: { confirm: "Delete #{@task.title}?" } %>

<div>
  <%= link_to 'All tasks', tasks_path %>
</div>

